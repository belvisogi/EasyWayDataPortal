{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "EasyWayDataPortal Path Configuration",
    "description": "Schema for path configuration file",
    "type": "object",
    "properties": {
        "description": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "paths": {
            "type": "object",
            "properties": {
                "projectRoot": {
                    "type": "string"
                },
                "wiki": {
                    "type": "string"
                },
                "wikiEasyWayData": {
                    "type": "string"
                },
                "scripts": {
                    "type": "string"
                },
                "agents": {
                    "type": "string"
                },
                "db": {
                    "type": "string"
                },
                "docs": {
                    "type": "string"
                },
                "apps": {
                    "type": "string"
                },
                "out": {
                    "type": "string"
                }
            },
            "required": [
                "projectRoot"
            ]
        },
        "legacy": {
            "type": "object"
        },
        "usage": {
            "type": "object"
        }
    },
    "required": [
        "paths"
    ]
}