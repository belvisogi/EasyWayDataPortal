# Forgejo server URL used by the runner inside Docker network.
GITEA_INSTANCE_URL=http://atelier:3000

# Registration token from Forgejo UI:
# Site Administration -> Actions -> Runners -> Create registration token
RUNNER_TOKEN=replace_with_runner_token

# Optional runner metadata
RUNNER_NAME=easyway-runner
RUNNER_LABELS=fabric-node:docker://node:20-bookworm,fabric-ubuntu:docker://ubuntu:latest

# Public exposure settings for Forgejo server
FORGEJO_DOMAIN=localhost
FORGEJO_ROOT_URL=http://localhost:3030/
FORGEJO_HTTP_PORT=3030
FORGEJO_SSH_PORT=2222
