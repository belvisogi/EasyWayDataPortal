{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://easyway.local/schemas/diary.schema.json",
  "title": "EasyWay Agentic Diary (Timeline)",
  "type": "object",
  "required": ["intent", "correlationId", "entries"],
  "properties": {
    "intent": { "type": "string", "minLength": 3 },
    "correlationId": { "type": "string", "minLength": 6 },
    "decision_trace_id": { "type": "string" },
    "startedAt": { "type": "string", "format": "date-time" },
    "finishedAt": { "type": "string", "format": "date-time" },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "stage", "outcome"],
        "properties": {
          "timestamp": { "type": "string", "format": "date-time" },
          "stage": { "type": "string", "minLength": 2 },
          "outcome": { "type": "string", "enum": ["ok", "warn", "error", "skipped"] },
          "reason": { "type": "string" },
          "next": { "type": "string" },
          "decision_trace_id": { "type": "string" },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": { "type": "string" },
                "path": { "type": "string" },
                "uri": { "type": "string" },
                "hash": { "type": "string" }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
