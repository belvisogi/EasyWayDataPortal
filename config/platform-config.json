{
    "$schema": "./platform-config.schema.json",
    "platform": "ado",
    "displayName": "Azure DevOps â€” EasyWay Scrum",
    "connection": {
        "baseUrl": "https://dev.azure.com/EasyWayData",
        "project": "EasyWay-DataPortal",
        "apiVersion": "7.0"
    },
    "auth": {
        "method": "pat",
        "envVariable": "AZURE_DEVOPS_EXT_PAT",
        "headerScheme": "Basic"
    },
    "workItemHierarchy": {
        "processTemplate": "EasyWay Scrum",
        "chain": [
            {
                "level": 1,
                "type": "Epic",
                "prefix": "[Epic]"
            },
            {
                "level": 2,
                "type": "Feature",
                "prefix": "[Feature]"
            },
            {
                "level": 3,
                "type": "Product Backlog Item",
                "prefix": "[PBI]"
            }
        ],
        "parentChildLinkType": "System.LinkTypes.Hierarchy-Reverse"
    },
    "paths": {
        "areaPath": "\\EasyWay-DataPortal",
        "iterationPath": ""
    },
    "tags": {
        "autoGenerated": "AutoPRD",
        "aiGenerated": "AI-Generated"
    },
    "pr": {
        "creationPattern": "link",
        "targetBranch": "develop"
    },
    "branchPolicy": {
        "protectedBranches": [
            "main",
            "develop"
        ],
        "featureBranchPrefix": "feature/"
    }
}