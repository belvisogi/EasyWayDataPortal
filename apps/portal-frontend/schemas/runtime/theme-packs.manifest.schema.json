{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "easyway.theme-packs.manifest.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "defaultId", "packs"],
  "properties": {
    "version": { "const": "1" },
    "defaultId": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
    "packs": {
      "type": "object",
      "additionalProperties": { "type": "string", "pattern": "^/theme-packs/theme-pack\\.[a-z0-9]+(?:-[a-z0-9]+)*\\.json$" }
    }
  }
}

