{
  "id": "whatfirst-lint",
  "version": "0.1.0",
  "principle": "WHAT-first: definire scopo, contratti e audit prima dell'implementazione",
  "intent": {
    "name": "whatfirst-lint",
    "description": "Eseguire WHAT-first lint e produrre report machine-readable.",
    "trigger": "whatfirst-lint.requested"
  },
  "roles": {
    "requester": "Operatore o n8n che richiede lint.",
    "orchestrator": "n8n.dispatch: valida input e invoca runner.",
    "agent_governance": "Interpreta esito e produce next step."
  },
  "stages": [
    { "name": "received", "purpose": "Ricevere richiesta e inizializzare correlationId", "entry_criteria": ["whatfirst-lint.requested"], "inputs": ["intent_payload"], "outputs": ["correlationId"], "success_criteria": ["Payload ricevuto"], "failure_criteria": ["Payload mancante"], "human_checkpoints": [], "ux_prompts": "generic_received" },
    { "name": "validated", "purpose": "Validare input", "entry_criteria": ["received.success"], "inputs": ["intent_payload"], "outputs": ["validation_ok"], "success_criteria": ["Spec valida"], "failure_criteria": ["Spec invalida"], "human_checkpoints": [], "ux_prompts": "generic_validated" },
    { "name": "executed", "purpose": "Eseguire lint e produrre report", "entry_criteria": ["validated.success"], "inputs": ["intent_payload"], "outputs": ["summaryOut"], "success_criteria": ["Report prodotto"], "failure_criteria": ["Esecuzione fallita"], "human_checkpoints": [], "ux_prompts": "generic_executed" },
    { "name": "completed", "purpose": "Chiudere run con output e next step", "entry_criteria": ["executed.success"], "inputs": ["summaryOut"], "outputs": ["run_summary"], "success_criteria": ["Output finale disponibile"], "failure_criteria": [], "human_checkpoints": [], "ux_prompts": "generic_done" }
  ],
  "observability": {
    "diary_log_fields": ["timestamp", "stage", "outcome", "reason", "next", "decision_trace_id", "artifacts[]"],
    "decision_trace_policy": "Propagare correlationId/decision_trace_id su tutti gli eventi e artifact"
  }
}

