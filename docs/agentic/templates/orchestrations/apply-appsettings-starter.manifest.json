{
  "id": "apply-appsettings-starter",
  "version": "0.1.0",
  "principle": "WHAT-first: definire scopo, contratti e audit prima dell'implementazione",
  "intent": {
    "name": "apply-appsettings-starter",
    "description": "Applicare uno starter di App Settings su App Service con audit e guardrail.",
    "trigger": "apply-appsettings-starter.requested"
  },
  "roles": {
    "requester": "Operatore o n8n che richiede applicazione settings.",
    "orchestrator": "n8n.dispatch: valida input e invoca runner.",
    "agent_ams": "Esegue az cli/arm e produce evidenze.",
    "steward_governance": "Approva su ambienti condivisi/prod."
  },
  "stages": [
    { "name": "received", "purpose": "Ricevere richiesta e inizializzare correlationId", "entry_criteria": ["apply-appsettings-starter.requested"], "inputs": ["intent_payload"], "outputs": ["correlationId"], "success_criteria": ["Payload ricevuto"], "failure_criteria": ["Payload mancante"], "human_checkpoints": [], "ux_prompts": "generic_received" },
    { "name": "validated", "purpose": "Validare input e policy (no segreti in chiaro)", "entry_criteria": ["received.success"], "inputs": ["intent_payload"], "outputs": ["validation_ok"], "success_criteria": ["Spec valida"], "failure_criteria": ["Spec invalida"], "human_checkpoints": [], "ux_prompts": "generic_validated" },
    { "name": "approved", "purpose": "Checkpoint governance per apply su prod", "entry_criteria": ["validated.success"], "inputs": ["intent_payload"], "outputs": ["approved"], "success_criteria": ["Approvazione registrata"], "failure_criteria": ["Non approvato"], "human_checkpoints": ["Approvazione governance"], "ux_prompts": "generic_approved" },
    { "name": "executed", "purpose": "Applicare settings e registrare evidenze", "entry_criteria": ["approved.success"], "inputs": ["intent_payload"], "outputs": ["appliedKeys[]"], "success_criteria": ["Esecuzione completata"], "failure_criteria": ["Esecuzione fallita"], "human_checkpoints": [], "ux_prompts": "generic_executed" },
    { "name": "completed", "purpose": "Chiudere run con output e next step", "entry_criteria": ["executed.success"], "inputs": ["appliedKeys[]"], "outputs": ["run_summary"], "success_criteria": ["Output finale disponibile"], "failure_criteria": [], "human_checkpoints": [], "ux_prompts": "generic_done" }
  ],
  "observability": {
    "diary_log_fields": ["timestamp", "stage", "outcome", "reason", "next", "decision_trace_id", "artifacts[]"],
    "decision_trace_policy": "Propagare correlationId/decision_trace_id su tutti gli eventi e artifact"
  }
}

