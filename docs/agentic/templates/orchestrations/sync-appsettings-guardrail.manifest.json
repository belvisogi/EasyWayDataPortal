{
  "id": "sync-appsettings-guardrail",
  "version": "0.1.0",
  "principle": "WHAT-first: definire scopo, contratti e audit prima dell'implementazione",
  "intent": {
    "name": "sync-appsettings-guardrail",
    "description": "Sincronizzare App Settings con guardrail e approvazione governance su main/prod.",
    "trigger": "sync-appsettings-guardrail.requested"
  },
  "roles": {
    "requester": "Operatore o n8n che richiede sync.",
    "orchestrator": "n8n.dispatch: valida input e applica guardrail.",
    "agent_governance": "Valida GOV_APPROVED e policy.",
    "agent_ams": "Esegue sync (solo se guardrail ok)."
  },
  "stages": [
    { "name": "received", "purpose": "Ricevere richiesta e inizializzare correlationId", "entry_criteria": ["sync-appsettings-guardrail.requested"], "inputs": ["intent_payload"], "outputs": ["correlationId"], "success_criteria": ["Payload ricevuto"], "failure_criteria": ["Payload mancante"], "human_checkpoints": [], "ux_prompts": "generic_received" },
    { "name": "validated", "purpose": "Validare input e prerequisiti", "entry_criteria": ["received.success"], "inputs": ["intent_payload"], "outputs": ["validation_ok"], "success_criteria": ["Spec valida"], "failure_criteria": ["Spec invalida"], "human_checkpoints": [], "ux_prompts": "generic_validated" },
    { "name": "approved", "purpose": "Checkpoint governance (obbligatorio per prod)", "entry_criteria": ["validated.success"], "inputs": ["intent_payload"], "outputs": ["approved"], "success_criteria": ["Approvazione registrata"], "failure_criteria": ["Non approvato"], "human_checkpoints": ["Approvazione governance"], "ux_prompts": "generic_approved" },
    { "name": "executed", "purpose": "Eseguire sync se guardrail ok e registrare evidenze", "entry_criteria": ["approved.success"], "inputs": ["intent_payload"], "outputs": ["guardrailPassed"], "success_criteria": ["Output prodotto"], "failure_criteria": ["Sync fallita"], "human_checkpoints": [], "ux_prompts": "generic_executed" },
    { "name": "completed", "purpose": "Chiudere run con output e next step", "entry_criteria": ["executed.success"], "inputs": ["guardrailPassed"], "outputs": ["run_summary"], "success_criteria": ["Output finale disponibile"], "failure_criteria": [], "human_checkpoints": [], "ux_prompts": "generic_done" }
  ],
  "observability": {
    "diary_log_fields": ["timestamp", "stage", "outcome", "reason", "next", "decision_trace_id", "artifacts[]"],
    "decision_trace_policy": "Propagare correlationId/decision_trace_id su tutti gli eventi e artifact"
  }
}

