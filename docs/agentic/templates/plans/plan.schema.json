{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://easyway.local/schemas/plan.schema.json",
  "title": "EasyWay Agentic Plan",
  "type": "object",
  "required": ["intent", "correlationId", "steps"],
  "properties": {
    "intent": { "type": "string", "minLength": 3 },
    "correlationId": { "type": "string", "minLength": 6 },
    "decision_trace_id": { "type": "string" },
    "targetEnv": { "type": "string" },
    "whatIf": { "type": "boolean", "default": true },
    "nonInteractive": { "type": "boolean", "default": false },
    "createdAt": { "type": "string", "format": "date-time" },
    "owner": { "type": "string" },
    "references": { "type": "array", "items": { "type": "string" } },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "status"],
        "properties": {
          "id": { "type": "string", "minLength": 2 },
          "title": { "type": "string", "minLength": 2 },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "waiting_approval", "completed", "canceled", "failed"]
          },
          "description": { "type": "string" },
          "requiresApproval": { "type": "boolean", "default": false },
          "tools": { "type": "array", "items": { "type": "string" } },
          "inputs": { "type": "array", "items": { "type": "string" } },
          "outputs": { "type": "array", "items": { "type": "string" } },
          "evidence": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
