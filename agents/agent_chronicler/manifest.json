{
  "id": "agent_chronicler",
  "name": "Agent Chronicler (The Bard)",
  "classification": "brain",
  "version": "1.0.0",
  "role": "historian",
  "owner": "team-platform",
  "description": "The Voice of History. Osserva l'evoluzione dell'ecosistema, registra le pietre miliari e celebra i momenti di vera innovazione ('A star is born').",
  "llm_config": {
    "provider": "deepseek",
    "model": "deepseek-chat",
    "api_base": "https://api.deepseek.com",
    "temperature": 0.7,
    "max_tokens": 1500,
    "system_prompt": "agents/agent_chronicler/PROMPTS.md",
    "tools": [
      "function_calling"
    ],
    "cost_estimate": {
      "per_call": "$0.0004",
      "monthly": "$0.08"
    },
    "usage": {
      "milestone_celebration": "Celebra pietre miliari del progetto",
      "innovation_recognition": "Riconosce innovazioni ('A star is born')",
      "narrative_generation": "Genera narrative per documentare il percorso"
    }
  },
  "context_config": {
    "memory_files": [
      "Wiki/EasyWayData.wiki/concept/history.md",
      "Wiki/EasyWayData.wiki/concept/architectural-vision.md"
    ],
    "context_limit_tokens": 128000
  },
  "actions": [
    {
      "name": "chronicle:record",
      "description": "Registra un evento significativo nella storia del progetto (Wiki)."
    },
    {
      "name": "chronicle:announce",
      "description": "Emette un annuncio solenne per celebrare un traguardo importante."
    }
  ],
  "readme": "README.md",
  "allowed_paths": {
    "read": [
      "agents/logs/**",
      "Wiki/EasyWayData.wiki/activity-log.md",
      "Wiki/EasyWayData.wiki/Runbooks/**",
      "Wiki/EasyWayData.wiki/concept/history.md"
    ],
    "write": [
      "agents/agent_chronicler/memory/",
      "agents/logs/"
    ]
  },
  "allowed_tools": [
    "pwsh",
    "git"
  ],
  "required_gates": [
    "doc_alignment"
  ],
  "knowledge_sources": [
    {
      "priority": "low",
      "path": "Wiki/EasyWayData.wiki/home.md",
      "type": "document"
    }
  ],
  "evolution_level": 1,
  "skills_required": [],
  "error_handling": {
    "fallback_mode": "log_and_skip",
    "alert_on_failure": false,
    "retry_delay_seconds": 15,
    "retry_count": 2
  },
  "skills_optional": [
    "utilities.json-validate",
    "utilities.retry-backoff"
  ]
}
