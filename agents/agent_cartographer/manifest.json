{
  "id": "agent_cartographer",
  "name": "Agent Cartographer (The Navigator)",
  "classification": "brain",
  "version": "1.0.0",
  "role": "mapper",
  "owner": "team-architecture",
  "description": "Mantiene la Mappa delle Dipendenze (Knowledge Graph). Prima di ogni modifica distruttiva, viene consultato per simulare gli impatti a cascata ('Butterfly Effect Analysis').",
  "llm_config": {
    "provider": "deepseek",
    "model": "deepseek-chat",
    "api_base": "https://api.deepseek.com",
    "temperature": 0.3,
    "max_tokens": 2000,
    "system_prompt": "agents/agent_cartographer/PROMPTS.md",
    "tools": [
      "function_calling"
    ],
    "cost_estimate": {
      "per_call": "$0.0006",
      "monthly": "$0.12"
    },
    "usage": {
      "graph_reasoning": "Ragiona su Knowledge Graph",
      "impact_analysis": "Simula Butterfly Effect",
      "relationship_discovery": "Scopre relazioni nascoste"
    }
  },
  "context_config": {
    "memory_files": [
      "Wiki/EasyWayData.wiki/concept/dependency-graph.md"
    ],
    "context_limit_tokens": 128000
  },
  "actions": [
    {
      "name": "graph:query",
      "description": "Chiede chi dipende da un certo artefatto (es. 'Chi usa Table:Users?')."
    },
    {
      "name": "graph:update",
      "description": "Aggiorna la mappa con nuove relazioni scoperte."
    },
    {
      "name": "impact:simulate",
      "description": "Simula cosa si rompe se modifico X."
    }
  ],
  "readme": "README.md",
  "allowed_paths": {
    "read": [
      "Wiki/EasyWayData.wiki/**",
      "docs/agentic/templates/docs/**",
      "out/wiki-link-graph.*",
      "Wiki/EasyWayData.wiki/concept/dependency-graph.md"
    ],
    "write": [
      "agents/agent_cartographer/memory/",
      "agents/logs/"
    ]
  },
  "allowed_tools": [
    "pwsh",
    "git"
  ],
  "required_gates": [
    "doc_alignment"
  ],
  "knowledge_sources": [
    {
      "priority": "low",
      "path": "Wiki/EasyWayData.wiki/home.md",
      "type": "document"
    }
  ],
  "evolution_level": 1,
  "skills_required": [],
  "error_handling": {
    "fallback_mode": "log_and_skip",
    "alert_on_failure": false,
    "retry_delay_seconds": 15,
    "retry_count": 2
  },
  "skills_optional": [
    "utilities.json-validate",
    "utilities.retry-backoff"
  ]
}
