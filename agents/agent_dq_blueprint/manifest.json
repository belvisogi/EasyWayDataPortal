{
  "name": "agent_dq_blueprint",
  "role": "Blueprint",
  "version": "0.1.0",
  "description": "Genera un blueprint iniziale di regole DQ (Policy Proposal + Policy Set) da CSV/XLSX/schema, integrato con ARGOS.",
  "allowed_paths": {
    "read": [
      "agents/agent_dq_blueprint/*",
      "docs/agentic/templates/*",
      "out/blueprint/*"
    ],
    "write": [
      "agents/agent_dq_blueprint/memory/",
      "agents/logs/"
    ]
  },
  "actions": [
    {
      "id": "blueprint-from-file",
      "description": "Crea blueprint da CSV/XLSX",
      "input": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "format": {
            "type": "string",
            "enum": [
              "csv",
              "xlsx"
            ]
          },
          "domain_id": {
            "type": "string"
          },
          "flow_id": {
            "type": "string"
          },
          "instance_id": {
            "type": "string"
          },
          "impact_default": {
            "type": "number"
          }
        },
        "required": [
          "path",
          "domain_id",
          "flow_id",
          "instance_id"
        ]
      },
      "output": {
        "type": "object"
      }
    }
  ],
  "readme": "README.md",
  "classification": "arm",
  "allowed_tools": [
    "pwsh",
    "git"
  ],
  "required_gates": [
    "doc_alignment"
  ],
  "knowledge_sources": [
    {
      "priority": "low",
      "path": "Wiki/EasyWayData.wiki/home.md",
      "type": "document"
    }
  ],
  "id": "agent_dq_blueprint",
  "owner": "team-platform",
  "evolution_level": 1,
  "context_config": {
    "memory_files": [
      "agents/kb/recipes.jsonl"
    ],
    "context_limit_tokens": 128000,
    "enable_memory": true
  },
  "skills_required": [],
  "llm_config": {
    "provider": "openai",
    "model": "gpt-4o",
    "temperature": 0.0,
    "system_prompt": "agents/agent_dq_blueprint/PROMPTS.md",
    "tools": [
      "function_calling"
    ]
  },
  "error_handling": {
    "fallback_mode": "log_and_skip",
    "alert_on_failure": false,
    "retry_delay_seconds": 15,
    "retry_count": 2
  },
  "skills_optional": [
    "utilities.json-validate",
    "utilities.retry-backoff"
  ]
}
