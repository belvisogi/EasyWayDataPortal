{
    "version": "1.0",
    "rules": {
        "branch_naming": {
            "enabled": true,
            "patterns": [
                "^feature/devops/PBI-\\d+-[a-z0-9-]+$",
                "^feature/frontend/PBI-\\d+-[a-z0-9-]+$",
                "^feature/backend/PBI-\\d+-[a-z0-9-]+$",
                "^feature/PBI-\\d+-[a-z0-9-]+$",
                "^chore/devops/PBI-\\d+-[a-z0-9-]+$",
                "^hotfix/devops/(INC|BUG)-\\d+-[a-z0-9-]+$",
                "^bugfix/FIX-\\d{3,}-[a-z0-9-]+$",
                "^hotfix/(INC|BUG)-\\d{3,}-[a-z0-9-]+$",
                "^develop$",
                "^main$"
            ],
            "error_message": "Branch name must follow policy, e.g. feature/devops/PBI-123-desc, chore/devops/PBI-123-desc, hotfix/devops/INC-123-desc or hotfix/devops/BUG-123-desc"
        },
        "commit_message": {
            "enabled": true,
            "pattern": "^(feat|fix|docs|style|refactor|perf|test|chore|ci|build)(\\(.+\\))?: .+$",
            "error_message": "Commit message must follow Conventional Commits (e.g., 'feat: add new button')"
        },
        "target_branch_policy": {
            "enabled": true,
            "rules": [
                {
                    "from": "feature/*",
                    "to": "develop",
                    "allow": true
                },
                {
                    "from": "chore/*",
                    "to": "develop",
                    "allow": true
                },
                {
                    "from": "bugfix/*",
                    "to": "develop",
                    "allow": true
                },
                {
                    "from": "hotfix/*",
                    "to": "main",
                    "allow": true
                },
                {
                    "from": "hotfix/*",
                    "to": "develop",
                    "allow": true
                },
                {
                    "from": "develop",
                    "to": "main",
                    "allow": true
                },
                {
                    "from": "*",
                    "to": "baseline",
                    "allow": false
                }
            ]
        },
        "forbidden_files": {
            "enabled": true,
            "patterns": [
                "**/.env",
                "**/*.key",
                "**/*.pfx",
                "**/password.txt"
            ]
        }
    }
}
