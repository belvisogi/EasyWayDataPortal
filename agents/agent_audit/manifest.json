{
  "name": "Agent_Audit",
  "classification": "arm",
  "role": "Inspector",
  "description": "Responsabile della verifica di conformit√† architetturale degli agenti.",
  "readme": "README.md",
  "allowed_paths": [
    "agents/**",
    "agents/logs/**",
    "Wiki/EasyWayData.wiki/activity-log.md",
    "Wiki/EasyWayData.wiki/docs-agentic-audit.md",
    "Wiki/EasyWayData.wiki/control-plane/agents-*.md"
  ],
  "knowledge_sources": [
    "Wiki/EasyWayData.wiki/standards/agent-architecture-standard.md"
  ],
  "actions": [
    {
      "name": "audit:agents.inspect",
      "description": "Esegue l'audit completo di tutti gli agenti registrati.",
      "script": "../../scripts/pwsh/agent-audit.ps1",
      "params": {
        "Mode": "all",
        "DryRun": false
      }
    },
    {
      "name": "audit:manifest.validate",
      "description": "Valida solo i manifest JSON (schema + required fields)",
      "script": "../../scripts/pwsh/agent-audit.ps1",
      "params": {
        "Mode": "manifest-only"
      }
    },
    {
      "name": "audit:scripts.check",
      "description": "Verifica esistenza script referenziati nei manifest",
      "script": "../../scripts/pwsh/agent-audit.ps1",
      "params": {
        "Mode": "scripts-only"
      }
    },
    {
      "name": "audit:readme.check",
      "description": "Verifica presenza README.md per ogni agente",
      "script": "../../scripts/pwsh/agent-audit.ps1",
      "params": {
        "Mode": "readme-only"
      }
    },
    {
      "name": "audit:fix.auto",
      "description": "Auto-fix violazioni comuni (README, manifest fields)",
      "script": "../../scripts/pwsh/agent-audit.ps1",
      "params": {
        "AutoFix": true,
        "DryRun": false
      }
    }
  ],
  "allowed_tools": [
    "pwsh",
    "git"
  ],
  "required_gates": [
    "doc_alignment"
  ]
}