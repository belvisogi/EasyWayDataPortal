{
  "role": "Agent_Creator",
  "description": "Scaffolding governato di nuovi agenti (manifest/templates/KB/Wiki) usando pattern canonici + contesto RAG (Azure AI Search) orchestrato da n8n.",
  "allowed_paths": {
    "read": [
      "agents/**",
      "docs/agentic/templates/intents/**",
      "docs/agentic/templates/orchestrations/**",
      "Wiki/EasyWayData.wiki/**",
      "scripts/**",
      "out/**"
    ],
    "write": [
      "agents/agent_creator/memory/",
      "agents/logs/"
    ]
  },
  "allowed_tools": [
    "pwsh",
    "git"
  ],
  "actions": [
    {
      "name": "agent:scaffold",
      "description": "Crea un nuovo agente da template canonico, genera artefatti WHAT-first e aggiorna KB/Wiki (WhatIf-by-default).",
      "params": {
        "writeKbRecipe": {
          "type": "boolean",
          "required": false
        },
        "agentRole": {
          "type": "string",
          "required": false
        },
        "description": {
          "type": "string",
          "required": false
        },
        "writeWikiPage": {
          "type": "boolean",
          "required": false
        },
        "agentName": {
          "type": "string",
          "required": true
        },
        "baseTemplate": {
          "type": "string",
          "required": false
        },
        "updateAgentsReadme": {
          "type": "boolean",
          "required": false
        }
      }
    }
  ],
  "required_gates": [
    "KB_Consistency"
  ],
  "approvals": {},
  "knowledge_sources": [
    {
      "priority": "medium",
      "type": "document",
      "path": "ai/vettorializza.yaml"
    },
    {
      "priority": "medium",
      "type": "document",
      "path": "Wiki/EasyWayData.wiki/ai/knowledge-vettoriale-easyway.md"
    },
    {
      "priority": "medium",
      "type": "document",
      "path": "Wiki/EasyWayData.wiki/orchestrations/orchestrator-n8n.md"
    },
    {
      "priority": "medium",
      "type": "data",
      "path": "docs/agentic/templates/intents/orchestrator.n8n.dispatch.intent.json"
    },
    {
      "priority": "medium",
      "type": "data",
      "path": "docs/agentic/templates/intents/agent.scaffold.intent.json"
    }
  ],
  "name": "agent_creator",
  "readme": "README.md",
  "classification": "arm",
  "id": "agent_creator",
  "owner": "team-platform",
  "version": "1.0.0",
  "evolution_level": 1,
  "context_config": {
    "memory_files": [
      "agents/kb/recipes.jsonl"
    ],
    "context_limit_tokens": 128000,
    "enable_memory": true
  },
  "skills_required": [],
  "llm_config": {
    "provider": "openai",
    "model": "gpt-4o",
    "temperature": 0.0,
    "system_prompt": "agents/agent_creator/PROMPTS.md",
    "tools": [
      "function_calling"
    ]
  },
  "error_handling": {
    "fallback_mode": "log_and_skip",
    "alert_on_failure": false,
    "retry_delay_seconds": 15,
    "retry_count": 2
  },
  "skills_optional": [
    "utilities.json-validate",
    "utilities.retry-backoff"
  ]
}
