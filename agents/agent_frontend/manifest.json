{
  "name": "agent_frontend",
  "classification": "arm",
  "role": "frontend-developer",
  "owner": "team-frontend",
  "description": "Gestisce sviluppo e deployment frontend (UI/UX, React, static assets, portal interface)",
  "readme": "README.md",
  "allowed_paths": {
    "read": [
      "apps/portal-frontend/src/**",
      "apps/portal-frontend/public/**",
      "apps/portal-frontend/*.json",
      "apps/portal-frontend/*.ts",
      "apps/portal-frontend/*.html",
      "apps/portal-frontend/*.js",
      "Wiki/EasyWayData.wiki/UX/**",
      "Wiki/EasyWayData.wiki/frontend/**"
    ],
    "write": [
      "agents/agent_frontend/memory/",
      "agents/logs/"
    ]
  },
  "knowledge_sources": [
    {
      "priority": "medium",
      "type": "document",
      "path": "Wiki/EasyWayData.wiki/UX/agent-chat-interface.md"
    },
    {
      "priority": "medium",
      "type": "document",
      "path": "Wiki/EasyWayData.wiki/UX/agentic-ux.md"
    },
    {
      "priority": "medium",
      "type": "document",
      "path": "Wiki/EasyWayData.wiki/easyway-webapp/05_codice_easyway_portale/easyway_portal_frontend/**"
    }
  ],
  "actions": [
    {
      "name": "frontend:build",
      "description": "Esegue build del frontend",
      "script": "../../scripts/agent-frontend.ps1",
      "params": {
        "Action": "build"
      }
    },
    {
      "name": "frontend:deploy",
      "description": "Deploya il frontend su Azure Static Web Apps",
      "script": "../../scripts/agent-frontend.ps1",
      "params": {
        "Action": "deploy"
      }
    }
  ],
  "allowed_tools": [
    "pwsh",
    "git",
    "npm"
  ],
  "required_gates": [
    "doc_alignment"
  ],
  "id": "agent_frontend",
  "version": "1.0.0",
  "evolution_level": 1,
  "context_config": {
    "memory_files": [
      "agents/kb/recipes.jsonl"
    ],
    "context_limit_tokens": 128000,
    "enable_memory": true
  },
  "skills_required": [],
  "llm_config": {
    "provider": "openai",
    "model": "gpt-4o",
    "temperature": 0.0,
    "system_prompt": "agents/agent_frontend/PROMPTS.md",
    "tools": [
      "function_calling"
    ]
  },
  "error_handling": {
    "fallback_mode": "log_and_skip",
    "alert_on_failure": false,
    "retry_delay_seconds": 15,
    "retry_count": 2
  },
  "skills_optional": [
    "utilities.json-validate",
    "utilities.retry-backoff"
  ]
}
