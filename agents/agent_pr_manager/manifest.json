{
    "id": "agent_pr_manager",
    "name": "agent_pr_manager",
    "role": "Agent_PR_Manager",
    "description": "Manages pull request lifecycle with description generation and gate validation.",
    "owner": "team-platform",
    "version": "2.1.0",
    "level": "L2",
    "llm_config": {
        "model": "gpt-4-turbo",
        "temperature": 0.2,
        "system_prompt": "PROMPTS.md"
    },
    "context_config": {
        "enable_memory": true
    },
    "skills": {
        "global": [
            "git",
            "analysis",
            "observability",
            "utilities"
        ],
        "local": [
            "pr-description",
            "gate-validation"
        ]
    },
    "actions": {
        "pr:create": {
            "description": "Prepare PR title/description and optionally create the PR.",
            "runner": "pr-manager-run.ps1",
            "args": {
                "title": "PR title",
                "targetBranch": "PR target branch",
                "whatIf": "true|false"
            }
        },
        "pr:validate-gates": {
            "description": "Validate branch-level governance gates before merge.",
            "runner": "pr-manager-run.ps1",
            "args": {
                "action": "validate-gates"
            }
        }
    },
    "allowed_tools": [
        "pwsh",
        "git",
        "az"
    ],
    "classification": "arm",
    "readme": "README.md"
}
