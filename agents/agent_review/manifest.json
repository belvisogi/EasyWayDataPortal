{
    "id": "agent_review",
    "name": "agent_review",
    "role": "Agent_Review",
    "description": "Reviews pull requests for quality, governance alignment, and documentation impact.",
    "owner": "team-platform",
    "version": "3.1.0",
    "level": "L2",
    "llm_config": {
        "model": "gpt-4-turbo",
        "temperature": 0.2,
        "system_prompt": "PROMPTS.md"
    },
    "context_config": {
        "enable_memory": true
    },
    "skills": {
        "global": [
            "analysis",
            "retrieval",
            "observability",
            "utilities"
        ],
        "local": [
            "pr-audit",
            "docs-impact-review"
        ]
    },
    "actions": {
        "review:audit-pr": {
            "description": "Review PR context and provide findings with governance checks.",
            "runner": "review-run.ps1",
            "args": {
                "inputPath": "Path to PR context text file",
                "action": "audit-pr"
            }
        },
        "review:static-check": {
            "description": "Run lightweight structural and naming review on supplied context.",
            "runner": "review-run.ps1",
            "args": {
                "inputPath": "Path to review request text file",
                "action": "static-check"
            }
        }
    },
    "allowed_tools": [
        "pwsh",
        "git"
    ],
    "classification": "brain",
    "readme": "README.md"
}
